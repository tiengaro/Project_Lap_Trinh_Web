
@{
    ViewBag.Title = "MyAccount";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<table align="center">
    <h2 style="text-align: center">Thông Tin Tài Khoản</h2>
    <h3 style="text-align: center"><font color=blue>@ViewData["ThanhCong"]</font> </h3>
    @using (Html.BeginForm())
    {
        <tr style="height:40px">
            <td>Email: </td>
            <td><input placeholder="Email" name="Email" type="email" required="" value="@Model.EMAILKH"/></td>
        </tr>
        <tr style="height:40px">
            <td>Họ và Tên: </td>
            <td><input placeholder="Họ Tên" name="Name" type="text" required="" value="@Model.HOTENKH"/></td>
        </tr>
        <tr style="height:40px">
            <td>Địa Chỉ: </td>
            <td><input placeholder="Địa Chỉ" name="Address" type="text" required="" value="@Model.DIACHIKH"/></td>
        </tr>
        <tr style="height:40px">
            <td>Điện Thoại: </td>
            <td><input placeholder="Điện Thoại" name="Phone" type="text" required="" value="@Model.SODTKH"/></td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td><input type="submit" value="Cập Nhật" /></td>
        </tr>
        <tr style="height:40px">
            <td>
                <a class="t-button" href="@Url.Action("DoiMatKhau","TaiKhoan", new { id = Model.MAKH})">Đổi Mật Khẩu</a>
            </td>
            <td>@Html.ActionLink(" Đăng Xuất", "DangXuat", "TaiKhoan")</td>
        </tr>
    }

</table>

